<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical" android:layout_width="match_parent"
    android:layout_height="match_parent">


    <ImageButton
        android:layout_width="50dp"
        android:layout_height="50dp"
        app:srcCompat="@drawable/add_ic"
        android:layout_marginTop="126dp"
        android:id="@+id/add_button"
        android:layout_alignParentTop="true"
        android:layout_alignParentEnd="true" />

    <ImageButton
        android:layout_width="50dp"
        android:layout_height="50dp"
        app:srcCompat="@drawable/minus_ic"
        android:layout_alignBottom="@+id/add_button"
        android:layout_alignParentStart="true"
        android:id="@+id/sub_button" />

    <TextView
        android:text="0"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignBottom="@+id/sub_button"
        android:layout_toEndOf="@+id/sub_button"
        android:layout_marginStart="25dp"
        android:textSize="@dimen/main_text_size"
        android:textColor="@color/black"
        android:id="@+id/number"
        android:layout_alignTop="@+id/sub_button" />

    <TextView
        android:text="TextView"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignBottom="@+id/number"
        android:layout_toEndOf="@+id/number"
        android:textSize="@dimen/main_text_size"
        android:textColor="@color/black"
        android:id="@+id/desc"
        android:layout_alignTop="@+id/number" />

</RelativeLayout>